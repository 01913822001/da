UnitTest for Objective-C

== Example ==

@implementation HelloTest

- (void) unittest {
  NSString* str = @"1 2 3";
  NSArray* ary = [str componentsSeparatedByString:@" "];
  [assert_equal a:@"(1, 2, 3)" b:ary];
  [assert_equal a:@"1,2,3" b:[ary componentsJoinedByString:@","]];
  [assert_equal int:6 int:1+2+3];
}

@end



  UnitTest* unittest = [UnitTest create];
  [unittest run:@"HelloTest"];
  [unittest report];



$ make
gcc -c -Wall -O7 test.m -o test.o
gcc -c -Wall -O7 UnitTest.m -o UnitTest.o
gcc -c -Wall -O7 HelloTest.m -o HelloTest.o
gcc -lobjc -framework Foundation -o test test.o UnitTest.o HelloTest.o 

$ ./test
HelloTest
  passed: (1, 2, 3)
  passed: 1,2,3
  passed: 6
OK, passed 3 tests.
