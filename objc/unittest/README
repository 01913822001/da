UnitTest for Objective-C

== Example ==

@implementation HelloTest
- (void) unittest:(id)assert_equal {
  NSString* str = @"1 2 3";
  NSArray* ary = [str componentsSeparatedByString:@" "];
  [assert_equal a:@"(1, 2, 3)" b:ary];
  [assert_equal a:@"1,2,3" b:[ary componentsJoinedByString:@","]];
  [assert_equal int:6 int:1+2+3];
}
@end



  UnitTest* unittest = [[UnitTest alloc] init];
  [unittest run:@"HelloTest"];
  [unittest report];



$ rake mac
gcc -c -Wall -O7 test.m -o test.mac.o
gcc -c -Wall -O7 UnitTest.m -o UnitTest.mac.o
gcc -c -Wall -O7 HelloTest.m -o HelloTest.mac.o
gcc -framework Foundation -o unittest_mac_test test.mac.o UnitTest.mac.o HelloTest.mac.o 

$ ./unitest_mac_test 
HelloTest
  passed: (1, 2, 3)
  passed: 1,2,3
  passed: 6
OK, passed 3 tests.
